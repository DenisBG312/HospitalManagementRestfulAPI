@model HospitalManagementAPI.Models.Hospital

@{
    ViewData["Title"] = "Edit Hospital";
}

<h1>Edit Hospital</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientsCount" class="control-label"></label>
        <input asp-for="PatientsCount" class="form-control" />
        <span asp-validation-for="PatientsCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>